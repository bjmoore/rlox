program = declaration* EOF ;

declaration = varDecl
            | statement ;

statement = exprStmt
          | printStmt ;
        
exprStmt = expression ";" ;

printStmt = "print" expression ";" ;

varDecl = "var" IDENTIFIER ( "=" expression )? ";" ;



primary = "true" | "false" | "nil"
        | NUMBER | STRING
        | "(" expression ")"
        | IDENTIFIER ;